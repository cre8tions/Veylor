# Veylor WebSocket Relay Configuration Example

# Remote WebSocket source(s) to connect to
sources:
  - url: "wss://example.com/websocket"
    # Optional: headers for authentication
    # headers:
    #   Authorization: "Bearer token"
    # Optional: WebSocket rebroadcast port for this source
    websocket_port: 8765
    # Optional: WebSocket bind host (defaults to 0.0.0.0)
    # websocket_host: "0.0.0.0"
    # Optional: Unix socket path for this source
    # unix_socket_path: "/tmp/veylor_source1.sock"
  
  # Example with Unix socket only
  # - url: "wss://example.com/websocket2"
  #   unix_socket_path: "/tmp/veylor_source2.sock"
  
  # Example with both endpoints
  # - url: "wss://example.com/websocket3"
  #   websocket_port: 8766
  #   unix_socket_path: "/tmp/veylor_source3.sock"

# Performance tuning
performance:
  # Maximum message queue size per client
  max_queue_size: 1000
  # Reconnection settings for source
  reconnect_delay: 5
  reconnect_max_attempts: 0  # 0 for infinite
